    {
      "source": "geo.events",
      "vhost": "/",
      "destination": "geo.proximity.alerts",
      "destination_type": "queue",
      "routing_key": "geo.proximity.#",
      "arguments": {}
    },
    {
      "source": "geo.events",
      "vhost": "/",
      "destination": "geo.sensor.detections",
      "destination_type": "queue",
      "routing_key": "geo.sensor.#",
      "arguments": {}
    },
    {
      "source": "geo.events.dlx",
      "vhost": "/",
      "destination": "geo.dead.letter.queue",
      "destination_type": "queue",
      "routing_key": "dlq.#",
      "arguments": {}
    }
  ]
